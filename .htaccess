
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /project/  
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>

# Prevent directory listing
Options -Indexes

# Disable server signature
ServerSignature Off